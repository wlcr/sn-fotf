# Copy this file to .env and fill in your actual values

# Sanity CMS Configuration
# Get these from your Sanity project dashboard at https://sanity.io/manage
# Note: Project ID and dataset are hardcoded in the app (not sensitive information)
SANITY_API_TOKEN=your-sanity-api-token
SANITY_PREVIEW_SECRET=your-preview-secret
SANITY_REVALIDATE_SECRET=your-revalidate-secret
SANITY_STUDIO_URL=http://localhost:3333

# Other environment variables
PUBLIC_BASE_URL=http://localhost:3000
SESSION_SECRET=your-session-secret
PUBLIC_STOREFRONT_API_TOKEN=your-shopify-storefront-token
PRIVATE_STOREFRONT_API_TOKEN=your-shopify-private-token
PUBLIC_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_APP_ID=your-shopify-app-id
SHOPIFY_APP_SECRET=your-shopify-app-secret
